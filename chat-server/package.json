{
  "name": "chat-server",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "egg": {
    "typescript": true,
    "declarations": true,
    "tsHelper": {
      "watchDirs": {
        "socketio": {
          "enabled": true,
          "directory": "app/io",
          "declareTo": "Application.io",
          "generator": "class",
          "interface": "IO"
        }
      }
    }
  },
  "scripts": {
    "start": "egg-scripts start --daemon --title=egg-server-chat-server",
    "stop": "egg-scripts stop --title=egg-server-chat-server",
    "dev": "egg-bin dev --sticky --port=9999",
    "doc": "apidoc -i ./app/controller/ -o ./doc/apidoc/",
    "debug": "egg-bin debug",
    "test-local": "egg-bin test",
    "test": "npm run lint -- --fix && npm run test-local",
    "cov": "egg-bin cov",
    "tsc": "ets && tsc -p tsconfig.json",
    "ci": "npm run lint && npm run cov && npm run tsc",
    "autod": "autod",
    "lint": "eslint . --fix --ext .ts",
    "clean": "ets clean"
  },
  "dependencies": {
    "egg": "^2.6.1",
    "egg-cors": "^2.2.3",
    "egg-jwt": "^3.1.7",
    "egg-mongoose": "^3.3.1",
    "egg-redis": "^2.4.0",
    "egg-scripts": "^2.6.0",
    "egg-socket.io": "^4.0.7"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.40",
    "@types/node": "^7.0.12",
    "@types/supertest": "^2.0.0",
    "apidoc": "^0.51.0",
    "autod": "^3.0.1",
    "autod-egg": "^1.1.0",
    "egg-bin": "^4.11.0",
    "egg-ci": "^1.8.0",
    "egg-mock": "^3.16.0",
    "egg-ts-helper": "^1.30.2",
    "egg-validate": "^2.0.2",
    "eslint": "^6.7.2",
    "eslint-config-egg": "^8.0.0",
    "tslib": "^1.9.0",
    "typescript": "^3.0.0"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "ci": {
    "version": "8"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "eslintIgnore": [
    "coverage"
  ],
  "author": "wangying",
  "license": "MIT"
}
